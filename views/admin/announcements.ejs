<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1>Lista ogłoszeń</h1>
    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
        <button class="btn btn-primary" type="submit" id="announcement">Dodaj ogłoszenie</button>
      </h6>
</div>
    <div class="row">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Treść</th>
                <th scope="col">Administrator</th>
                <th scope="col">Utworzono</th>

              </tr>
            </thead>
            <tbody>
            
                <%announcements.forEach((announcement) => { %>
                    <tr>
                    <th scope="row"><%=announcement.id%></th>
                    <th scope="row"><%=announcement.announcement%></th>
                    <th scope="row"><%=announcement.author%></th>
                    <th scope="row"><%=announcement.created.toLocaleString()%></th>
                    </tr>
                <% }) %>
            </tbody>
          </table>
    </div>

<script src="/assets/dashboard/javascript/announcements.js"></script>
          















