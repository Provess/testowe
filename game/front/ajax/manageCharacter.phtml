<ips:template parameters="$charData" />
<div class="ipsColumns ipsColumns_bothSpacing ipsColumns_halfSpacing ipsPad">
  <div class="ipsColumn ipsColumn_wide ipsBox ipsPad">
    <h1 class="ipsType_sectionTitle ipsType_issue"><strong>Informacje</strong></h1>
    <hr class="ipsHr">
    <ul class="ipsDataList">

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Global</strong></h4><br>
          <div class="">
            <a href="https://h-rp.eu/index.php?/profile/{$charData['gid']}-redirect/" data-ipshover="" data-ipshover-target="https://h-rp.eu/index.php?/profile/{$charData['gid']}-redirect/&do=hovercard" class="ipsUserPhoto ipsUserPhoto_tiny">
              <img src="{$charData['photo']}">
            </a> 
            <a href="https://h-rp.eu/index.php?/profile/{$charData['gid']}-redirect/" data-ipshover="" data-ipshover-target="https://h-rp.eu/index.php?/profile/{$charData['gid']}-redirect/&do=hovercard">
              {$charData['gid2']}
            </a>
            (GID: {$charData['gid']})</div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Dane postaci</strong></h4><br>
          <div class="">{$charData['imie_nazwisko2']} (ID: {$charData['id']})</div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Status postaci</strong></h4><br>
          <div class="">
            {{if $charData['block'] == 0 }}
            <span class="ipsType_success"> Aktywna </span>
            {{else}}
            <span class="ipsType_negative"> Zablokowana </span> 
            {{endif}}
          </div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Widoczność</strong></h4><br>
          <div class="">
            {{if $charData['ukryta'] == 0 }}
            <span class="ipsType_success"> Widoczna </span>
            {{else}}
            <span class="ipsType_negative"> Ukryta </span> 
            {{endif}}
          </div>
        </div>
      </li>


      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>AJ</strong></h4><br>
          <div class="">{$charData['aj']} min</div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Ostatnio w grze</strong></h4><br>
          <div class="">{datetime="$charData['last']"}</div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Dziś w grze</strong></h4><br>
          <div class="">{$charData['today']} min</div>
        </div>
      </li>

      <hr class="ipsCommentUnreadSeperator">

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Przegrany czas</strong></h4><br>
          <div class="">{$charData['hours']}h, {$charData['minutes']}min </div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Gotówka przy postaci</strong></h4><br>
          <div class="">${$charData['cash']}</div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Gotówka w banku</strong></h4><br>
          <div class="">${$charData['bank']}</div>
        </div>
      </li>


      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Siła</strong></h4><br>
          <div class="">{$charData['strength']}j</div>
        </div>
      </li>


      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Konto bankowe</strong></h4><br>
          <div class="">{$charData['account']}</div>
        </div>
      </li>

      <li class="ipsDataItem">
        <div class="ipsType_sectionTitle ipsType_reset cForumTitle">
          <h4 class="ipsDataItem_title"><strong>Hash maski</strong></h4><br>
          <div class="">Nieznajomy_<strong>{expression="substr(md5($charData['id']), 0, 5)"}</strong></div>
        </div>
      </li>

    </ul>
  </div>
  <div class="ipsColumn ipsColumn_fluid ipsBox ipsPad">
    <h1 class="ipsType_sectionTitle ipsType_success"><strong>Zarządzanie {$charData['imie_nazwisko2']}</strong>
      
      <div class="ipsType_right" style="margin-top: -20px; margin-left: 245px;">
        <a href="#nadajkare" class="ipsButton ipsButton_negative ipsButton_verySmall" data-ipsdialog="#nadajkare" data-ipsDialog-content="#nadajkare"  data-ipsdialog-modal="true" data-ipsdialog-size="narrow" data-ipsdialog-title="Nadawanie kary - {$charData['imie_nazwisko2']}">
          <i class="fa fa-ban"></i>&nbsp;<span class="ipsResponsive_hidePhone ipsResponsive_inline">&nbsp;&nbsp;Nadaj karę</span>
        </a>
        
        <a href="#nadajGS" class="ipsButton ipsButton_positive ipsButton_verySmall" data-ipsdialog="#nadajkare" data-ipsDialog-content="#nadajGS"  data-ipsdialog-modal="true" data-ipsdialog-size="narrow" data-ipsdialog-title="Nadawanie GS - {$charData['imie_nazwisko2']}">
          <i class="fa fa-plus"></i>&nbsp;<span class="ipsResponsive_hidePhone ipsResponsive_inline">&nbsp;&nbsp;Nadaj GameScore</span>
        </a>	
      </div>

      <div id='nadajkare' class='ipsHide ipsPad'>
        <form action="" method="POST" class="ipsForm ipsForm_horizontal ">
          <ul class="ipsDataList ipsType_center">

            <li class='ipsFieldRow'>
              <label for='example' class='ipsFieldRow_label'>
                Typ kary
              </label>
              <div class='ipsFieldRow_content'>
                <select name="type">
                  <option value="3">Ban SA-MP</option>
                </select>
                <br />
                <span class='ipsFieldRow_desc'>Wybierz typ kary</span>
              </div>
            </li>
            
              <hr class="ipsHr">
            
            <li class='ipsFieldRow'>
            <label for='example' class='ipsFieldRow_label'>
              Data wygaśnięcia
            </label>
            <div class='ipsFieldRow_content'>
              <input name="expire" type="text"><br />
              <span class='ipsFieldRow_desc'>Określ w dniach kiedy kara wygasa</span><br />
              <span class='ipsFieldRow_desc ipsType_negative'>Jeśli kara ma nigdy nie wygasać wpisz -1</span>
